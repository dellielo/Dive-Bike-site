{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "outDir": "./built",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "ES2020",
    "target": "ES2020"
  },
  "include": ["./src/**/*"]
}
